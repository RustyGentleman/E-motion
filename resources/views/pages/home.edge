@layout.app({ title: 'Home', authUser, affects, listers })
	@slot('meta')
		<meta name="description" content="The emporium of exotic emotions">
		<style>
			@keyframes spin {
				from {transform: rotate(0deg)}
				to {transform: rotate(360deg)}
			}
			main { text-align: center }
			section { margin-block: 10rem; }
			#hero {
				h1 {
					font-size: 8rem;
					line-height: .5em;
					p {
						font-size: 3rem;
						transform: translateY(.3rem);
					}
					#f, #oul { display: inline-block }
					#f { transform: translateY(1.2rem) }
					#oul { transform: translateY(-1.2rem) }
				}
			}
			#values {
				text-align: left;
				svg {
					width: 30ch;
					height: auto;
					overflow: visible;
					#orbit1 {
						animation: spin 60s linear infinite;
						transform-origin: center center;
					}
					#orbit2 {
						animation: spin 30s linear infinite reverse;
						transform-origin: center center;
						animation-delay: -10s;
					}
				}
				> div {
					> div { width: 50ch }
					> div:nth-child(2) { transform: translateX(1rem) }
				}
			}
			#featured .grid {
				grid-template-columns: 25ch 25ch 25ch;
			}
		</style>
	@endslot

	<section id="hero" class="flex f-c">
		<div class="flex f-c f-col">
			<h1>
				<span id="f">F</span>ood
				<p class="i">for the</p>
				S<span id="oul">oul</span>
			</h1>
			<br>
			<br>
			<p>Experience new and interesting emotions.<br>
			Recapture fleeting feelings from the past.</p>
			<br>
			@button()
				<a href="/products">Explore</a>
			@end
		</div>
	</section>
